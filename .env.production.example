# ==================================
# Production Environment Variables
# ==================================

# Domain Configuration
DOMAIN=your-domain.com
ACME_EMAIL=your-email@example.com

# DNS Provider for Wildcard SSL (Cloudflare example)
DNS_PROVIDER=cloudflare
CF_API_EMAIL=your-cloudflare-email@example.com
CF_API_KEY=your_cloudflare_api_key

# Traefik Dashboard Auth (generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$$apr1$$hash$$here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_WEBHOOK_URL=https://api.your-domain.com/webhook/tg
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
ADMIN_TELEGRAM_ID=123456789

# OpenAI
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama (if using local models)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=dolphin-mixtral

# Database
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=jarvis_db
DATABASE_URL=postgresql+asyncpg://jarvis:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/jarvis_db

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0

# Qdrant
QDRANT_API_KEY=CHANGE_THIS_QDRANT_KEY
QDRANT_URL=http://qdrant:6333

# Application
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_HERE
DEBUG=False
LOG_LEVEL=INFO
PRODUCTION=true

# CORS (for production)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://api.your-domain.com

# Celery
CELERY_BROKER_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/1
